  <body class="container bg-info">
  <style>
h1 {
  border-style: solid;
  border-width: thick;
  
}
</style>

<h1 class="p-2 mt-5">All Transactions</h1>


  <% @transactions.each do |transaction| %>
    <div id="transactions" class="container border border-black p-2">
    <%= render transaction %>
    <p>
      <%= link_to "Show this transaction", transaction %>
    </p>
    </div>
  <% end %>
</div>
<button class="btn btn-dark" type="button">
<%= link_to "New transaction", new_transaction_path %>
</button>
</body>
